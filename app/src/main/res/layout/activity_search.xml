<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="10"
    android:padding="4sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.activity.SearchActivity"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/img_back_search"
        android:padding="8sp"
        android:src="@drawable/ic_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_weight="8"
        android:id="@+id/edt_search"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/img_back_search"
        android:hint="Search"
        android:textColorHint="#6b6666"
        android:textSize="16sp"
        android:textStyle="italic"
        android:paddingLeft="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_weight="0.75"
        android:id="@+id/img_search_cancel"
        android:src="@drawable/cancel"
        android:scaleType="centerInside"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:layout_toRightOf="@+id/edt_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</LinearLayout>