<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_viewSongs"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_songs"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerInside"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/tv_songName"
            android:text="Neu minh la nguoi la"
            android:textColor="#2a45e9"
            android:textSize="18sp"
            android:paddingTop="11dp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/img_songs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_songArtists"
            android:text="Ho Quang Hieu"
            android:textStyle="italic"
            android:textColor="#babac4"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:paddingTop="3dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/tv_songName"
            android:layout_toRightOf="@+id/img_songs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
